---
import Layout from "../layouts/Layout.astro"
---

<Layout title="404 | Page not found" showNavbar={false}>
  <div id="main">
    <div class="fof">
      <h1>404 | Page not found</h1>
      <a href="/" class="back-button">Back to home page</a>
    </div>
  </div>
  <style>
    * {
      transition: all 0.6s;
    }

    html {
      height: 100%;
    }

    body {
      font-family: 'Poppins', sans-serif;
      color: #ffffff;
      margin: 0;
    }

    #main {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      width: 100%;
      height: 80vh;
      text-align: center;
    }

    .fof h1 {
      font-size: 70px;
      margin-bottom: 30px;
      padding-right: 15px;
      animation: type 0.7s alternate infinite;
    }

    .back-button {
      display: inline-block;
      padding: 12px 24px;
      background-color: transparent;
      color: #ffffff;
      font-weight: 500;
      border-radius: 8px;
      text-decoration: none;
      transition: background-color 0.3s, color 0.3s;
      border: 1px solid #ffffff;
      transition: transform 0.2s ease;
    }

    .back-button:hover {
      transform: scale(1.02);
    }

    @keyframes type {
      from {
        box-shadow: inset -3px 0px 0px #ffffff;
      }
      to {
        box-shadow: inset -3px 0px 0px transparent;
      }
    }
  </style>
</Layout>
