---
import Layout from "../layouts/Layout.astro";
--- 

<Layout title="404 | Page not found" showNavbar={false}>
  <main class="flex flex-1 flex-col items-center justify-center text-center px-4"
        style="padding-top:150px;">
    <h1 class="animate-type text-white text-5xl md:text-6xl">
      404 | Page not found
    </h1>
    <a href="/" class="back-button">Back to home page</a>
  </main>

  <style>
    .animate-type {
      font-weight: bold;
      margin-bottom: 40px;
      position: relative;
    }

    .animate-type::after {
      content: "";
      position: absolute;
      top: 0;
      right: -8px;
      width: 3px;
      height: 100%;
      background: #fff;
      animation: type 0.7s alternate infinite;
    }

    @keyframes type {
      from { opacity: 1; }
      to { opacity: 0; }
    }

    @keyframes blink {
      to { visibility: hidden; }
    }

    .back-button {
      display: inline-block;
      padding: 12px 24px;
      font-size: 1rem;
      font-weight: 500;
      color: #fff;
      background-color: transparent;
      backdrop-filter: blur(3px);
      border: 1px solid #18181B;
      border-radius: 8px;
      text-decoration: none;
      transition: transform 0.2s ease;
    }

    .back-button:hover {
      transform: scale(1.02);
    }

    @media (max-width: 768px) {
      .animate-type {
        font-size: 2rem;
        margin-bottom: 30px;
      }
      .back-button {
        padding: 10px 20px;
        font-size: 0.875rem;
      }
    }
  </style>
</Layout>