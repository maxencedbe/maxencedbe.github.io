---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Maxence DEBES - Portfolio">
  <div class="flex flex-col md:flex-row items-center justify-center w-full max-w-6xl mx-auto gap-40 px-4 flex-1">
    
    <div class="flex-1 flex flex-col items-start justify-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-4 text-white">
        Maxence DEBES
      </h1>
      <p class="text-2xl md:text-3xl text-white">
        Student passionate about <span class="text-pink-400">IA</span> and <span class="text-pink-400">Data Science</span>
      </p>
    </div>

    <div class="flex-1 flex justify-center items-center">
      <img
        src="/me.jpg"
        alt="Photo de Maxence DEBES"
        class="w-40 h-40 md:w-70 md:h-70 rounded-full object-cover border-2 border-white"
      />
    </div>

  </div>
</Layout>