---
import Layout from "../layouts/Layout.astro";

const links = [
    { name: 'LinkedIn', url: 'https://www.linkedin.com/in/maxence-debes' },
    { name: 'GitHub', url: 'https://github.com/maxencedbe' },
];
---

<Layout title="Contact">
  <main class="flex flex-col items-start gap-6">
    <h2 class="text-xl font-bold mb-6 pl-40 pt-30">Contact me</h2>
    <p class="text-lg mb-6 pl-40">Feel free to reach out to me through any of the following platforms :</p>
    <ul class="list-disc list-inside marker:text-[10px] mb-6 pl-50">
      {links.map(link => (
        <li class="mb-2">
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="relative text-white text-base font-sans
                  after:absolute after:left-0 after:-bottom-0.25
                  after:h-[0.7px] after:w-0 after:bg-pink-400
                  after:transition-all after:duration-300
                  hover:after:w-full"
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </main>
</Layout>