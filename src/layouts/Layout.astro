---
import Navbar from "../components/Navbar.jsx";
import Footer from "../components/Footer.jsx";
import AnimatedBackground from "../components/AnimatedBackground.jsx";
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";

const { title, showNavbar = true } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" href="/neural-network-black-icon.svg" type="image/svg" />
    <ViewTransitions />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
      html, body {
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        background-color: #000000;
        background-image: radial-gradient(circle, rgb(0, 0, 0) 1.5px, transparent 1px);
        background-size: 40px 40px;
        color: #fff;
        overflow-x: hidden;
        height: 100%;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      #navbar-wrapper {
        width: 100%;
        padding-left: 300px;
        pointer-events: auto;
      }

      #footer-wrapper {
        width: 100%;
        pointer-events: auto;
      }

      main.transition-container {
        flex: 1;
        display : flex;
        flex-direction: column;
        margin-top: 70px;
        position: relative;
        z-index: 10;
        justify-content: center;
        box-sizing: border-box;
      }

      html::view-transition {
        background-color: #000000;
      }

      /* --- Responsive --- */
      @media (max-width: 768px) {
        #navbar-wrapper {
          width: 100%;
          height: 60px;
          flex-direction: row;
          padding: 0 20px;
        }

        main.transition-container {
          margin-left: 0;
          margin-top: 60px; /* espace pour navbar mobile */
        }
      }
    </style>
  </head>
  <body>
    <AnimatedBackground client:only="react" />
    {showNavbar && <div id="navbar-wrapper"><Navbar client:load /></div>}
    <main class="transition-container">
      <slot />
    </main>
    <div id="footer-wrapper"><Footer client:load /></div>
  </body>
</html>